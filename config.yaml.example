# Shufoo! チラシ画像LINE送信 設定ファイル (テンプレート)
# このファイルを config.yaml にコピーして実際のキーを設定してください

stores:
  - name: "サミット/弦巻通り店"
    shopId: "264240"
    enabled: true
  # 複数店舗を追加する場合は以下のように追加
  # - name: "ライフ/三軒茶屋店"
  #   shopId: "123456"
  #   enabled: true
  # - name: "オーケー/用賀店"
  #   shopId: "789012"
  #   enabled: false  # enabled: false で一時的に無効化可能

line:
  channel_access_token: "YOUR_LINE_CHANNEL_ACCESS_TOKEN"
  user_id: "YOUR_LINE_USER_ID"
